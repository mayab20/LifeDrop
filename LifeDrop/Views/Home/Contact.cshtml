@{
    ViewData["Title"] = "Contact";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" />
}

<div class="container">
    <div class="contact-card">
        <div class="card-body">
            <h2 class="card-title">Contact Us</h2>
            <p class="text-center">
                We'd love to hear from you! Feel free to reach out using the information below.
            </p>
            <ul class="list">
                <li class="list-item">
                    <i class="bi bi-envelope-fill me-3"></i>
                    <strong>Email:</strong>&nbsp; contact@blooddonation.com
                </li>
                <li class="list-item">
                    <i class="bi bi-telephone-fill me-3"></i>
                    <strong>Phone:</strong>&nbsp; +1 234 567 8900
                </li>
                <li class="list-item">
                    <i class="bi bi-geo-alt-fill me-3"></i>
                    <strong>Address:</strong>&nbsp; 123 Blood Donation Center, Beirut, Lebanon
                </li>
            </ul>

            <div class="ratio ratio-16x9 mb-4 h-20">
                <iframe 
                    src="https://www.google.com/maps?q=Beirut,+Lebanon&output=embed"
                    style="border:0; border-radius:15px;" allowfullscreen loading="lazy">
                </iframe>
            </div>
        </div>
    </div>
</div>
